@prefix fhir:  <http://hl7.org/fhir/> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix skos:  <http://www.w3.org/2004/02/skos/core#> .
@prefix substance-category: <http://hl7.org/fhir/substance-category/> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix w5:    <http://hl7.org/fhir/w5#> .

substance-category:  a   owl:Ontology ;
        rdfs:comment     "Substance category codes" ;
        rdfs:label       "Substance Category Codes" ;
        owl:versionIRI   "http://hl7.org/fhir/substance-category/3.1.0" ;
        owl:versionInfo  "Substance Category Codes(3.1.0)" .

substance-category:material
        a                owl:Class ;
        rdfs:label       "Material" ;
        skos:definition  "A finished product which is not normally ingested, absorbed or injected (e.g. steel, iron, wood, plastic and paper)." ;
        skos:prefLabel   "Material" .

substance-category:food
        a                owl:Class ;
        rdfs:label       "Dietary Substance" ;
        skos:definition  "A food, dietary ingredient, or dietary supplement for human or animal." ;
        skos:prefLabel   "Dietary Substance" .

substance-category:allergen
        a                owl:Class ;
        rdfs:label       "Allergen" ;
        skos:definition  "A substance that causes an allergic reaction." ;
        skos:prefLabel   "Allergen" .

substance-category:body
        a                owl:Class ;
        rdfs:label       "Body Substance" ;
        skos:definition  "A substance that comes directly from a human or an animal (e.g. blood, urine, feces, tears, etc.)." ;
        skos:prefLabel   "Body Substance" .

substance-category:biological
        a                owl:Class ;
        rdfs:label       "Biological Substance" ;
        skos:definition  "A substance that is produced by or extracted from a biological source." ;
        skos:prefLabel   "Biological Substance" .

substance-category:drug
        a                owl:Class ;
        rdfs:label       "Drug or Medicament" ;
        skos:definition  "A substance intended for use in the diagnosis, cure, mitigation, treatment, or prevention of disease in man or other animals (Federal Food Drug and Cosmetic Act)." ;
        skos:prefLabel   "Drug or Medicament" .

substance-category:chemical
        a                owl:Class ;
        rdfs:label       "Chemical" ;
        skos:definition  "Any organic or inorganic substance of a particular molecular identity, including -- (i) any combination of such substances occurring in whole or in part as a result of a chemical reaction or occurring in nature and (ii) any element or uncombined radical (http://www.epa.gov/opptintr/import-export/pubs/importguide.pdf)." ;
        skos:prefLabel   "Chemical" .
