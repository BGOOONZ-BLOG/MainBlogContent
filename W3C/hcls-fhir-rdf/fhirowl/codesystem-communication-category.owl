@prefix fhir:  <http://hl7.org/fhir/> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix communication-category: <http://hl7.org/fhir/communication-category/> .
@prefix skos:  <http://www.w3.org/2004/02/skos/core#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix w5:    <http://hl7.org/fhir/w5#> .

communication-category:
        a                owl:Ontology ;
        rdfs:comment     "Codes for general categories of communications such as alerts, instruction, etc." ;
        rdfs:label       "CommunicationCategory" ;
        owl:versionIRI   "http://hl7.org/fhir/communication-category/3.1.0" ;
        owl:versionInfo  "CommunicationCategory(3.1.0)" .

communication-category:reminder
        a                owl:Class ;
        rdfs:label       "Reminder" ;
        skos:definition  "The communication conveys a reminder." ;
        skos:prefLabel   "Reminder" .

communication-category:alert
        a                owl:Class ;
        rdfs:label       "Alert" ;
        skos:definition  "The communication conveys an alert." ;
        skos:prefLabel   "Alert" .

communication-category:notification
        a                owl:Class ;
        rdfs:label       "Notification" ;
        skos:definition  "The communication conveys a notification." ;
        skos:prefLabel   "Notification" .

communication-category:instruction
        a                owl:Class ;
        rdfs:label       "Instruction" ;
        skos:definition  "The communication conveys instruction." ;
        skos:prefLabel   "Instruction" .
