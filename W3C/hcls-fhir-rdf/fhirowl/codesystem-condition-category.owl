@prefix fhir:  <http://hl7.org/fhir/> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix skos:  <http://www.w3.org/2004/02/skos/core#> .
@prefix condition-category: <http://hl7.org/fhir/condition-category/> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix w5:    <http://hl7.org/fhir/w5#> .

condition-category:  a   owl:Ontology ;
        rdfs:comment     "Preferred value set for Condition Categories." ;
        rdfs:label       "Condition Category Codes" ;
        owl:versionIRI   "http://hl7.org/fhir/condition-category/3.1.0" ;
        owl:versionInfo  "Condition Category Codes(3.1.0)" .

condition-category:encounter-diagnosis
        a                owl:Class ;
        rdfs:label       "Encounter Diagnosis" ;
        skos:definition  "A point in time diagnosis (e.g. from a physician or nurse) in context of an encounter." ;
        skos:prefLabel   "Encounter Diagnosis" .

condition-category:problem-list-item
        a                owl:Class ;
        rdfs:label       "Problem List Item" ;
        skos:definition  "An item on a problem list which can be managed over time and can be expressed by a practitioner (e.g. physician, nurse), patient, or related person." ;
        skos:prefLabel   "Problem List Item" .
