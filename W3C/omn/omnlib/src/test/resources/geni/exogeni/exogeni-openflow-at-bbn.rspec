<?xml version="1.0" encoding="UTF-8"?>
<!-- 
This example RSpec shows how to request the OpenFlow datapath for 
the BBN ExoGENI Rack on shared OpenFlow VLAN 1750

AM: https://foam.gpolab.bbn.com:3626/foam/gapi/1
-->

<rspec xmlns="http://www.geni.net/resources/rspec/3"
       xmlns:xs="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:openflow="http://www.geni.net/resources/rspec/ext/openflow/3"
       xs:schemaLocation="http://www.geni.net/resources/rspec/3
           http://www.geni.net/resources/rspec/3/request.xsd
           http://www.geni.net/resources/rspec/ext/openflow/3
           http://www.geni.net/resources/rspec/ext/openflow/3/of-resv.xsd"
       type="request">

  <openflow:sliver description="Sliver to allow BBN ExoGENI and other OF Sites communication over over backbone VLAN 3716 "
                   email="yourname@site.com">

    <openflow:controller url="tcp:yourhost.site.com:33020" type="primary" />

    <openflow:group name="Site-1750-nlr-3716">
      <openflow:datapath component_id="urn:publicid:IDN+openflow:foam:foam.gpolab.bbn.com+datapath+06:d6:00:12:e2:b8:a5:d0"
			 component_manager_id="urn:publicid:IDN+openflow:foam:foam.gpolab.bbn.com+authority+am">
        <openflow:port num="5"/>   <!-- to NLR 3716 -->
        <openflow:port num="15"/>  <!-- to BBN ExoGENI rack -->
      </openflow:datapath>
    </openflow:group>

    <openflow:match>

      <openflow:use-group name="Site-1750-nlr-3716" />

      <openflow:packet>
        <openflow:dl_type value="0x800,0x806"/>
        <openflow:nw_dst value="10.42.11.0/24"/>
        <openflow:nw_src value="10.42.11.0/24"/>
      </openflow:packet>

    </openflow:match>
  </openflow:sliver>

</rspec>
